@{
ViewBag.Title = "Home Page";
}

<div class="jumbotron text-center">
    <h1 class="display-4">Welcome to the Hospital Management System</h1>
    <p class="lead">Efficiently manage your hospital's appointments, doctors, patients, and prescriptions all in one place.</p>
    <hr class="my-4">
    <p>Get started by exploring the sections below:</p>
    <a class="btn btn-primary btn-lg" href="@Url.Action("Index", "Appointment")" role="button">Manage Appointments</a>
    <a class="btn btn-secondary btn-lg" href="@Url.Action("Index", "Doctor")" role="button">View Doctors</a>
    <a class="btn btn-info btn-lg" href="@Url.Action("Index", "Patient")" role="button">View Patients</a>
    <a class="btn btn-success btn-lg" href="@Url.Action("Index", "Prescription")" role="button">Manage Prescriptions</a>
</div>

<div class="container mt-5">
    <div class="row">
        <div class="col-md-6">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">Appointments</h5>
                    <p class="card-text">Manage and view all hospital appointments efficiently.</p>
                    <a href="@Url.Action("Index", "Appointment")" class="btn btn-primary">Go to Appointments</a>
                </div>
            </div>
        </div>
        <div class="col-md-6">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">Doctors</h5>
                    <p class="card-text">View and manage the list of doctors in your hospital.</p>
                    <a href="@Url.Action("Index", "Doctor")" class="btn btn-secondary">Go to Doctors</a>
                </div>
            </div>
        </div>
    </div>
    <div class="row mt-4">
        <div class="col-md-6">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">Patients</h5>
                    <p class="card-text">Keep track of patient records and manage their details easily.</p>
                    <a href="@Url.Action("Index", "Patient")" class="btn btn-info">Go to Patients</a>
                </div>
            </div>
        </div>
        <div class="col-md-6">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">Prescriptions</h5>
                    <p class="card-text">Manage prescriptions issued to patients by doctors.</p>
                    <a href="@Url.Action("Index", "Prescription")" class="btn btn-success">Go to Prescriptions</a>
                </div>
            </div>
        </div>
    </div>
</div>
