@model IEnumerable<HospitalManagementProject.DTO.PatientsDto.PatientDto>

<h2>Patients</h2>

<div class="card">
    <div class="card-body">
        <table class="table table-striped">
            <thead>
            <tr>
                <th>First Name</th>
                <th>Last Name</th>
                <th>Date of Birth</th>
                <th>Gender</th>
                <th>Actions</th>
            </tr>
            </thead>
            <tbody>
            @foreach (var patient in Model)
            {
            <tr>
                <td>@patient.GivenName</td>
                <td>@patient.FamilyName</td>
                <td>@patient.Dob.ToString("d")</td>
                <td>@patient.Sex</td>
                <td>
                    <a href="@Url.Action("Edit", new { id = patient.Id })" class="btn btn-primary btn-sm">Edit</a>
                    <a href="@Url.Action("Details", new { id = patient.Id })" class="btn btn-info btn-sm">Details</a>
                    <a href="@Url.Action("Delete", new { id = patient.Id })" class="btn btn-danger btn-sm">Delete</a>
                </td>
            </tr>
            }
            </tbody>
        </table>

        <a href="@Url.Action("Create")" class="btn btn-success">Add New Patient</a>
    </div>
</div>
