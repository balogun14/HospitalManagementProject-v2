@model HospitalManagementProject.DTO.InventoryDto.InventoryDto

<h2>Inventory Item Details</h2>

<div class="card">
    <div class="card-header">
        @Model.ItemName
    </div>
    <div class="card-body">
        <dl class="row">
            <dt class="col-sm-3">Quantity</dt>
            <dd class="col-sm-9">@Model.Quantity</dd>

            <dt class="col-sm-3">Expiry Date</dt>
            <dd class="col-sm-9">@Model.ExpiryDate.ToString("d")</dd>
        </dl>
        <a href="@Url.Action("Edit", new { id = Model.Id })" class="btn btn-primary">Edit</a>
        <a href="@Url.Action("Index")" class="btn btn-secondary">Back to List</a>
    </div>
</div>
