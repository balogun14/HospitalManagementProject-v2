@model HospitalManagementProject.ViewModels.AuthViewModel.RegisterViewModel
@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Sign Up - Hospital Management</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            background-color: #f0f4f8;
            display: flex;
            justify-content: center;
            align-items: center;
            height: 100vh;
            margin: 0;
        }
        .container {
            background-color: white;
            padding: 2rem;
            border-radius: 8px;
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
            width: 100%;
            max-width: 400px;
        }
        h2 {
            text-align: center;
            color: #2c3e50;
            margin-bottom: 1.5rem;
        }
        .form-group {
            margin-bottom: 1rem;
        }
        label {
            display: block;
            margin-bottom: 0.5rem;
            color: #34495e;
        }
        input {
            width: 100%;
            padding: 0.5rem;
            border: 1px solid #bdc3c7;
            border-radius: 4px;
            font-size: 1rem;
        }
        button {
            width: 100%;
            padding: 0.75rem;
            background-color: #3498db;
            color: white;
            border: none;
            border-radius: 4px;
            font-size: 1rem;
            cursor: pointer;
            transition: background-color 0.3s ease;
        }
        button:hover {
            background-color: #2980b9;
        }
        .validation-summary-errors {
            color: #e74c3c;
            margin-bottom: 1rem;
        }
        .field-validation-error {
            color: #e74c3c;
            font-size: 0.875rem;
        }
    </style>
</head>
<body>
<div class="container">
    <h2>Sign Up</h2>
    <form asp-action="Register" method="post">
        <div asp-validation-summary="ModelOnly" class="validation-summary-errors"></div>
        <div class="form-group">
            <label asp-for="Email">Email</label>
            <input asp-for="Email" type="email" required>
            <span asp-validation-for="Email" class="field-validation-error"></span>
        </div>
        <div class="form-group">
            <label asp-for="Password">Password</label>
            <input asp-for="Password" type="password" required>
            <span asp-validation-for="Password" class="field-validation-error"></span>
        </div>
        <div class="form-group">
            <label asp-for="ConfirmPassword">Confirm Password</label>
            <input asp-for="ConfirmPassword" type="password" required>
            <span asp-validation-for="ConfirmPassword" class="field-validation-error"></span>
        </div>
        <a href="@Url.Action("Login", "Auth")">Already have an account? Sign In</a>
        <button type="submit">Sign Up</button>
    </form>
</div>
</body>
</html>
