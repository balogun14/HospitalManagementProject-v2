@model IEnumerable<HospitalManagementProject.DTO.AppointmentsDto.AppointmentDto>
@{
Layout = "~/Views/Shared/_Layout.cshtml";
}

<link rel="stylesheet" href="~/css/styles.css" asp-append-version="true" />

<h2>Appointments</h2>
<div class="card">
    <div class="card-body">
        <table class="table table-striped">
            <thead>
            <tr>
                <th>Title</th>
                <th>Notes</th>
                <th>Appointment Time</th>
                <th>Patient</th>
                <th>Doctor</th>
                <th>Actions</th>
            </tr>
            </thead>
            <tbody>
            @foreach (var appointment in Model)
            {
                <tr>
                    <td>@appointment.Title</td>
                    <td>@appointment.Notes</td>
                    <td>@appointment.AppointmentTime.ToString("g")</td>
                    <td>@appointment.Patient.FirstName @appointment.Patient.LastName</td>
                    <td>@appointment.Doctor.FirstName @appointment.Doctor.LastName</td>
                    <td>
                        <a href="@Url.Action("Edit", new { id = appointment.Id })" class="btn btn-primary btn-sm">Edit</a>
                        <a href="@Url.Action("Detail", new { id = appointment.Id })" class="btn btn-info btn-sm">Details</a>
                        <a href="@Url.Action("Delete", new { id = appointment.Id })" class="btn btn-danger btn-sm">Delete</a>
                    </td>
                </tr>
            }
            </tbody>
        </table>

        <a href="@Url.Action("Create")" class="btn btn-success">Create New Appointment</a>
    </div>
</div>
