@model IEnumerable<HospitalManagementProject.DTO.AppointmentsDto.AppointmentDto>

@{
    ViewData["Title"] = "Appointments";
}

<h1>Appointments</h1>

<p>
    <a class="btn btn-primary" asp-action="Create">Create New</a>
</p>

<table class="table">
    <thead>
    <tr>
        <th>Patient ID</th>
        <th>Patient</th>
        <th>Appointment Time</th>
        <th>Notes</th>
        <th>Actions</th>
    </tr>
    </thead>
    <tbody>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.Patient.PatientId</td>
            <td>@item.Patient.FirstName @item.Patient.LastName</td>
            <td>@item.AppointmentTime.ToShortDateString()</td>
            <td>@item.Notes</td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Detail" asp-route-id="@item.Id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
    }
    </tbody>
</table>