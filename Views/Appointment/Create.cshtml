@model HospitalManagementProject.DTO.AppointmentsDto.CreateAppointmentDto
<link rel="stylesheet" href="~/css/styles.css" asp-append-version="true" />
@{
Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Create Appointment</h2>

<div class="card">
    <div class="card-body">
        @using (Html.BeginForm())
        {
        <div class="form-group">
            @Html.LabelFor(m => m.Title)
            @Html.TextBoxFor(m => m.Title, new { @class = "form-control" })
        </div>

        <div class="form-group">
            @Html.LabelFor(m => m.Notes)
            @Html.TextAreaFor(m => m.Notes, new { @class = "form-control" })
        </div>

        <div class="form-group">
            @Html.LabelFor(m => m.AppointmentTime)
            @Html.TextBoxFor(m => m.AppointmentTime, new { @class = "form-control", @type = "datetime-local" })
        </div>

        <div class="form-group">
            @Html.LabelFor(m => m.PatientId)
            @Html.DropDownList("PatientId" ,new SelectList(ViewBag.Patients, "PatientId","FullName"), "Select Patient", new { @class = "form-control" })
        </div>

        <div class="form-group">
            @Html.LabelFor(m => m.DoctorId)
            @Html.DropDownList("DoctorId", new SelectList(ViewBag.Doctors, "DoctorId", "FullName"), "Select Doctor", new { @class = "form-control" })
        </div>

        <button type="submit" class="btn btn-primary">Create</button>
        @if (ViewBag.Patients == null)
        {
            <p>Patients data is not available.</p>
        }

        }
    </div>
</div>
