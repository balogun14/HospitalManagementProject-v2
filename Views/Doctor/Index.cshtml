@model IEnumerable<HospitalManagementProject.DTO.DoctorsDto.DoctorDto>

<h2>Doctors</h2>

<div class="card">
    <div class="card-body">
        <table class="table table-striped">
            <thead>
            <tr>
                <th>First Name</th>
                <th>Last Name</th>
                <th>Specialization</th>
                <th>Phone Number</th>
                <th>Actions</th>
            </tr>
            </thead>
            <tbody>
            @foreach (var doctor in Model)
            {
            <tr>
                <td>@doctor.Firstname</td>
                <td>@doctor.LastName</td>
                <td>@doctor.Speciality</td>
                <td>@doctor.PhoneNumber</td>
                <td>
                    <a href="@Url.Action("Edit", new { id = doctor.Id })" class="btn btn-primary btn-sm">Edit</a>
                    <a href="@Url.Action("Details", new { id = doctor.Id })" class="btn btn-info btn-sm">Details</a>
                    <a href="@Url.Action("Delete", new { id = doctor.Id })" class="btn btn-danger btn-sm">Delete</a>
                </td>
            </tr>
            }
            </tbody>
        </table>

        <a href="@Url.Action("Create")" class="btn btn-success">Create New Doctor</a>
    </div>
</div>
